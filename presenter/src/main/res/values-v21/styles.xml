<resources>

    <!-- Base application theme. -->
    <style name="VideoDailyNoActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimaryDark">@color/darkblue</item>
    </style>

    <style name="MyNavigationDrawerTheme" parent="VideoDailyNoActionBar">
        <item name="colorPrimaryDark">@color/darkblue</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="actionBarStyle">@style/VideoDailyActionBarStyle</item>
        <item name="android:elevation">0dp</item>

        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>
        <!-- enable overlapping of exiting and entering activities-->
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>


    <style name="VideoDailyActionBar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/darkblue</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="actionBarStyle">@style/VideoDailyActionBarStyle</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="NoteDailyActionBar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/darkblue</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="elevation">0dp</item>
        <item name="actionBarStyle">@style/VideoDailyActionBarStyle</item>
    </style>


    <style name="VideoDailyTextStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>


    <style name="VideoDailyActionBarStyle" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
        <item name="displayOptions">homeAsUp|showTitle</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>


</resources>
