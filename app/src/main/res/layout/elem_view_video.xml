<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/flMain"
    android:layout_height="wrap_content">

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/edge_medium"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@null"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/trash"
                android:src="@drawable/ic_delete_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardViewCreateVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="@dimen/edge_normal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rlVideoCreate">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/flVideoCreate">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/ivVideoThumbnail"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:layout_margin="@dimen/edge_medium" />
                </FrameLayout>

                <EditText
                    android:id="@+id/etTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/flVideoCreate"
                    android:focusableInTouchMode="false"
                    android:layout_margin="@dimen/edge_medium"
                    android:maxLines="3"
                    android:focusable="false"
                    android:textCursorDrawable="@drawable/keyboard_cursor_color"
                    android:inputType="text"
                    android:textSize="@dimen/text_medium"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:ellipsize="end"
                    android:hint="@string/fragment_create_title" />

                <EditText
                    android:id="@+id/etDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etTitle"
                    android:focusableInTouchMode="false"
                    android:layout_margin="@dimen/edge_medium"
                    android:focusable="false"
                    android:inputType="text"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:textCursorDrawable="@drawable/keyboard_cursor_color"
                    android:textSize="@dimen/text_mini_normal"
                    android:textStyle="normal"
                    android:gravity="top"
                    android:textColor="@color/black" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </com.daimajia.swipe.SwipeLayout>
</FrameLayout>