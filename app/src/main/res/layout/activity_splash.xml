<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/flSsplashMain">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_splash"
        android:id="@+id/flSplash"
        android:clipChildren="false"
        tools:ignore="UselessParent">

        <view
            class="com.mti.videodiary.animation.SkewableTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/splash_welcome"
            android:id="@+id/tvWelcome"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="@dimen/extra_huge"
            android:textStyle="bold" />

        <view
            class="com.mti.videodiary.animation.SkewableTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/splash_app_name"
            android:id="@+id/tvTitle"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="@dimen/extra_huge"
            android:visibility="invisible"
            android:textStyle="bold" />

        <EditText
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:layout_margin="@dimen/edge_above"
            android:id="@+id/etName"
            android:hint="@string/splash_personal_name"
            android:textColor="@color/gray"
            android:textColorHint="@color/gray"
            android:background="@color/white"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/text_medium"
            android:visibility="gone"
            android:layout_below="@+id/tvTitle"
            android:focusable="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/splash_next"
            android:id="@+id/splashBtClickNext"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:gravity="center"
            android:background="@drawable/next"
            android:textSize="@dimen/text_mini_normal"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/etName"
            android:layout_alignBottom="@+id/etName"
            android:layout_alignTop="@+id/etName"
            tools:ignore="ContentDescription" />

        <com.larswerkman.holocolorpicker.ColorPicker
            android:id="@+id/picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/llButtonsActions"
            android:background="@null"
            android:visibility="gone"
            android:layout_below="@+id/picker"
            android:layout_margin="@dimen/edge_above">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/splash_customise_app"
                android:id="@+id/btCustomiseApp"
                android:background="@drawable/button_selector"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/edge_above"
                android:textColor="@color/blue" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/edge_above"
                android:text="@string/splash_random"
                android:id="@+id/btSkip"
                android:background="@drawable/button_selector"
                android:textColor="@color/blue" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/llButtonsGradient"
            android:visibility="gone"
            android:gravity="top">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_medium"
                android:textStyle="normal"
                android:text="@string/splash_gradient_left"
                android:id="@+id/cbGradientLeft" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_medium"
                android:textStyle="normal"
                android:text="@string/splash_gradient_top"
                android:id="@+id/cbGradientTop" />


            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/splash_gradient_right"
                android:textColor="@color/white"
                android:textSize="@dimen/text_medium"
                android:textStyle="normal"
                android:layout_weight="1"
                android:id="@+id/cbGradientRight" />


            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/splash_gradient_bottom"
                android:textColor="@color/white"
                android:textSize="@dimen/text_medium"
                android:textStyle="normal"
                android:layout_weight="1"
                android:id="@+id/chGradientBottom" />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>